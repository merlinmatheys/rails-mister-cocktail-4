<div class="banner">
<h1 id="title">Cocktail's BAR !</h1>
<h2 id="link"><%= link_to 'Create a new Cocktail', new_cocktail_path() %></h2>
</div>
<ul>
<div id="card-container">
<% @cocktails.each do |cocktail| %>
<div class="cocktail-card">
<li><%= cocktail.name %></li>
